
<ul id = "subjects">
   <% Subject.all.each do |c| %>
   <li><%= link_to c.name, :action => "show_subjects", :id => c.id %></li>
   <% end %>
</ul>


<% if @book.blank? %>
<p>There are not any book currently in the system.</p>
<% else %>
<p>These are the current book in our system</p>

<ul id = "book">
   <% @book.each do |c| %>
   <li>
   	  <%= link_to c.title, {:action => 'show', :id => c.id} -%> <br>
      <b> <%= link_to 'Edit', {:action => "edit",:id => c.id} %></b>
   </li>
   <% end %>
</ul>

<% end %>
<p><%= link_to "Add new Book", {:action => 'new' }%></p>

